# ~/etc/bash/rc/git
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-

if [ -x /opt/vagrant/bin/vagrant ]; then
  export vagrant_version=`vagrant -v | ruby -e "puts STDIN.read.gsub(/Vagrant\s+/, '')"`
  vagrant_completions=/opt/vagrant/embedded/gems/gems/vagrant-${vagrant_version}/contrib/bash/completion.sh

  if [ -f $vagrant_completions ]; then
    . $vagrant_completions
  fi
fi
